<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd
">
    <entity name="App\Casfid\Scraper\Domain\Source\Model\Source" table="source"
            repository-class="App\Casfid\Scraper\Infrastructure\Persistence\Doctrine\ORM\SourceRepository">
        <id name="id" type="SourceId" column="id" length="36"/>
        <field name="url" type="SourceUrl" column="url" length="255"/>
        <field name="origin" type="SourceOrigin" column="origin" length="3"/>
        <field name="createdAt" type="datetime_immutable" column="created_at"/>
        <field name="updatedAt" type="datetime_immutable" column="updated_at" nullable="true"/>
        <field name="deletedAt" type="datetime_immutable" column="deleted_at" nullable="true"/>
        <field name="hash" type="SourceHash" column="hash" length="64"/>
        <field name="pending" type="boolean" column="pending"/>
    </entity>
</doctrine-mapping>
